{
  "plugins": {
    "@textlint/markdown": true,
    "@textlint/text": true
  },
  "filters": {
    "comments": true,
    "allowlist": {
      "allow": [
        "/^```[\\s\\S]*?```/m",
        "/^`[^`]+`/"
      ]
    }
  },
  "rules": {
    "@textlint-ja/textlint-rule-ja-allowed-kanji": {
      "preset": {
        "regular": true,
        "forename": false,
        "jis1": false,
        "jis2": false
      },
      "allow": [
        "org_os_assistant",
        "LineaDoc"
      ]
    },
    "preset-foreign-language-writing": {
      "kana-english-suffix-use": true,
      "kana-english-suffix-abbrev": false
    },
    "textlint-rule-ja-hiragana-keishikimeishi": true,
    "textlint-rule-prh": {
      "rulePaths": [
        "./prh-rules/gendai-kanazukai.yml"
      ]
    },
    "textlint-rule-okurigana": {
      "通則1": true,
      "通則2": true,
      "通則3": true,
      "通則4": true,
      "通則5": true,
      "通則6": true,
      "通則7": true
    },
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 100,
        "severity": "warning"
      },
      "max-kanji-continuous-len": {
        "max": 6,
        "severity": "warning"
      },
      "ja-no-mixed-period": {
        "periodMark": "。",
        "severity": "error"
      },
      "ja-no-space-between-full-width": {
        "severity": "warning"
      },
      "no-double-negative-ja": {
        "severity": "warning"
      },
      "no-dropping-the-ra": {
        "severity": "error"
      },
      "ja-no-redundant-expression": {
        "severity": "suggestion"
      },
      "ja-no-weak-phrase": {
        "severity": "suggestion"
      },
      "no-doubled-joshi": {
        "min_interval": 1,
        "severity": "warning"
      }
    },
    "prh": {
      "rulePaths": [
        "./prh-rules/技術用語.yml",
        "./prh-rules/表記ゆれ.yml",
        "./prh-rules/常用漢字外.yml"
      ]
    },
    "no-mix-dearu-desumasu": {
      "preferInHeader": "",
      "preferInBody": "ですます",
      "preferInList": "である",
      "strict": true,
      "severity": "error"
    },
    "no-mixed-zenkaku-and-hankaku-alphabet": {
      "prefer": "半角",
      "severity": "error"
    },
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "never",
        "severity": "warning"
      },
      "ja-space-around-code": {
        "before": true,
        "after": true,
        "severity": "suggestion"
      }
    },
    "prefer-tari-tari": {
      "severity": "suggestion"
    },
    "ja-unnatural-alphabet": {
      "severity": "warning"
    }
  }
}